{
  "name": "ipfc-extension",
  "description": "A browser extension for Inter Planetary Flash Cards",
  "version": 0.1,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "ipfc-extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ],

  "web_accessible_resources": ["sidebar/sidebar.js", "popup/popup.html"]
}